
<%= form_for @post do |post| %>

  <div class="form-group">
    <%= post.label :title, "Title" %>
    <%= post.text_field :title, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= post.label :body, "Body" %>
    <%= post.text_field :body, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= post.submit "Submit", :class => 'btn btn-primary btn-block' %>
  </div>

<% end %>
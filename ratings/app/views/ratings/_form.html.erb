<%= form_for( @rating ) do |f| %>
  <div class="form-group">
    <h4><%= f.label "Title" %></h4>
    <h4><%= f.text_field :title, class: "form-control" %></h4>
  </div>

  <div class="form-group">
    <h4><%= f.label "Review" %></h4>
    <h4><%= f.text_area :review, class: "form-control" %></h4>
  </div>

  <div class="form-group">
    <h4><%= f.label "Star Rating" %></h4>
    <h4><%= f.select :star_rating, options: options_for_select([["*", 1], ["**", 2], ["***", 3], ["****", 4], ["*****", 5]]) %></h4>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :place_id, value: @place.id %>

  <div class="form-group">
    <h4><%= f.submit "Submit", class: "btn btn-success" %></h4>
  </div>
<% end %>

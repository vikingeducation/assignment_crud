<h2>Profile</h2>

<hr>

<section class="row">
  <section class="col-md-6">
    <h4>Name</h4>
  </section>
  <section class="col-md-6">
    <%= "#{@user.first_name} #{@user.last_name}" %>
  </section>
</section>

<hr>

<section class="row">
  <section class="col-md-6">
    <h4>User Name</h4>
  </section>
  <section class="col-md-6">
    <%= "#{@user.user_name}" %>
  </section>
</section>

<hr>

<section class="row">
  <section class="col-md-6">
    <h4>Email</h4>
  </section>
  <section class="col-md-6">
    <%= "#{@user.email}" %>
  </section>
</section>

<hr>

<h5><%= link_to "Edit My Profile", edit_user_path( @user ) %></h5>
<h5><%= link_to "Delete My Profile", user_path( @user ), method: :delete %></h5>
